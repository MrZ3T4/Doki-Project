<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:targetApi="LOLLIPOP">

    <item android:id="@+id/state_on"
        android:drawable="@drawable/settings_true_ic"
        android:state_checked="true"/>

    <item android:id="@+id/state_off"
        android:drawable="@drawable/settings_false_ic" />

    <transition
        android:drawable="@drawable/settings_anim"
        android:fromId="@id/state_off"
        android:toId="@id/state_on" />

</animated-selector>