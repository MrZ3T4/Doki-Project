<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/information_coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnBackground"
    android:alpha="0">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/informacion_appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="?attr/colorOnBackground"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snapMargins"
            app:toolbarId="@+id/informacion_toolbar">

                <FrameLayout
                    android:id="@+id/toolbar_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="1"
                    app:layout_collapseMode="parallax">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_gender"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingStart="13dp"
                        android:paddingEnd="15dp"
                        android:clipToPadding="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        android:layout_marginTop="205dp"
                        android:layout_marginStart="130dp" />

                    <ImageView
                        android:id="@+id/imgBlur_cover"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="end"
                        android:scaleType="centerCrop" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/gradient"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgView_cover"
                        android:layout_width="110dp"
                        android:layout_height="160dp"
                        android:layout_marginTop="110dp"
                        android:layout_marginStart="20dp"
                        app:shapeAppearanceOverlay="@style/squircleImageView"
                        android:scaleType="fitXY"/>


                    <TextView
                        android:id="@+id/txtView_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:layout_marginStart="143dp"
                        android:paddingEnd="15dp"
                        android:text="TUPU"
                        android:fontFamily="@font/helvetica_neue_medium"
                        android:textSize="25sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:ellipsize="end"
                        android:singleLine="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="155dp"
                        android:layout_marginStart="145dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgView_status"
                            android:src="@drawable/ic_status"
                            android:layout_width="15dp"
                            android:layout_height="15dp"/>

                        <TextView
                            android:id="@+id/txtView_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_medium"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"
                            android:singleLine="true" />


                       <ImageView
                           android:layout_marginStart="15dp"
                           android:id="@+id/imgView_category"
                           android:layout_width="15dp"
                           android:layout_height="15dp"/>

                    <TextView
                        android:id="@+id/txtView_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helvetica_neue_medium"
                        android:textSize="15sp"
                        android:layout_marginStart="5dp"
                        android:singleLine="true" />

                   </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="180dp"
                        android:layout_marginStart="145dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgView_date"
                        android:src="@drawable/ic_date"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
            <TextView
                android:id="@+id/txtView_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:layout_marginStart="5dp"/>
                    </LinearLayout>
                </FrameLayout>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/informacion_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:layout_collapseMode="pin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/toolbar_back"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="15dp"
                        android:src="@drawable/toolbar_back"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

            <com.google.android.material.tabs.TabLayout
                style="@style/TabLayout"
                android:id="@+id/information_tabLayout"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_gravity="bottom"
                android:background="@drawable/tab_divider"
                app:tabContentStart="25dp"
                />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/information_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>


    <ProgressBar
        android:visibility="visible"
        android:id="@+id/information_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/orange_400"
        android:layout_centerInParent="true"/>


</RelativeLayout>
