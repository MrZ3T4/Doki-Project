<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
        android:visibility="visible"
        android:id="@+id/progressbar_details"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:indeterminateTint="?attr/colorPrimary"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Sinopsis"
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                    android:fontFamily="@font/helvetica_neue_medium"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_hide_more_btn"
                    style="@style/Widget.MaterialComponents.Button"
                    app:backgroundTint="?attr/colorOnBackground"
                    android:textColor="?attr/colorControlNormal"
                    app:rippleColor="?attr/colorPrimary"
                    app:elevation="0dp"
                    android:elevation="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textAllCaps="false"
                    android:text="Mostrar más"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"/>


            </RelativeLayout>

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/color"
    app:cardElevation="0dp"
    app:cardBackgroundColor="?attr/colorPrimaryVariant">

            <at.blogc.android.views.ExpandableTextView
                android:id="@+id/sinopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sinopsis"
                android:textColor="?attr/colorControlNormal"
                android:lineSpacingExtra="3dp"
                android:maxLines="5"
                android:ellipsize="end"
                app:animation_duration="300"
                android:textSize="14sp"
                android:layout_margin="15dp"
                android:fontFamily="@font/helvetica_neue_medium"/>

</com.google.android.material.card.MaterialCardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Datos sobre el Anime"
                    android:textSize="18sp"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/helvetica_neue_medium"/>


            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detalles_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/color"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorPrimaryVariant">


                    <LinearLayout
                        android:id="@+id/detalles_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título:"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/helvetica_neue_medium"/>


                    <TextView
                        android:id="@+id/titulo_completo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxx"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/helvetica_neue_medium"/>

                    <TextView
                        android:id="@+id/episodios_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Episodios:"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/helvetica_neue_medium"/>


                    <TextView
                        android:id="@+id/episodios_anime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yyyyy"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/helvetica_neue_medium"/>

                    <TextView
                        android:id="@+id/clasificacion_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clasificación:"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/helvetica_neue_medium"/>


                    <TextView
                        android:id="@+id/clasificacion_anime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yyyyy"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/helvetica_neue_medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puntuación:"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/helvetica_neue_medium"/>


                    <TextView
                        android:id="@+id/emitido_anime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yyyyy"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/helvetica_neue_medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anime ID:"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/helvetica_neue_medium"/>


                    <TextView
                        android:id="@+id/id_anime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yyyyy"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/helvetica_neue_medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Más Información:"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/helvetica_neue_medium"/>


                    <TextView
                        android:id="@+id/mal_anime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="yyyyy"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/helvetica_neue_medium"/>
                    </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>